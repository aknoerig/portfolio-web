doctype html
html

	//- HTML HEADER
	head
		meta(charset="utf-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		meta(http-equiv="X-UA-Compatible" content="IE=edge")

		title= title || 'André Knörig'
		meta(name="description", content="")
		meta(name="keywords", content="André Knörig, Andre Knoerig, interaction design, interface design, ux, consulting, user experience, technologies, physical computing")

		link(rel="shortcut icon", href="/favicon.ico", type="image/x-icon")
		link(rel="apple-touch-icon" sizes="57x57" href="/images/favicons/favicon-57.png")
		link(rel="apple-touch-icon" sizes="114x114" href="/images/favicons/favicon-114.png")
