extends ../layouts/default

mixin activity(activity)
	.activity(data-ks-editable=editable(user, { list: 'Activity', id: activity.id }))
		h2: a(href='/activities/activity/' + activity.slug)= activity.title
		p.lead.text-muted Posted 
			if activity.publishedDate
				| on #{activity._.publishedDate.format('MMMM Do, YYYY')} 
			if activity.categories && activity.categories.length
				| in 
				each cat, i in activity.categories
					a(href='/activities/' + cat.key)= cat.name
					if i < activity.categories.length - 1
						| , 
					else
						|  
			if activity.author
				| by #{activity.author.name.first}
		if activity.image.exists
			img(src=activity._.image.fit(160,160)).img.pull-right
		p!= activity.content.brief
		if activity.content.extended
			p.read-more: a(href='/activities/activity/' + activity.slug) Read more...

block intro
	.container
		h1= data.category ? data.category.name : 'Activities'

block content
	.container: .row
		.col-sm-8.col-md-9
			if filters.category && !data.category
				h3.text-muted Invalid Category.
			else
				if data.activities.results.length
					if data.activities.totalPages > 1
						h4.text-weight-normal Showing 
							strong #{data.activities.first}
							|  to 
							strong #{data.activities.last}
							|  of 
							strong #{data.activities.total}
							|  activities.
					else
						h4.text-weight-normal Showing #{utils.plural(data.activities.results.length, '* activity')}.
					.activities
						each activity in data.activities.results
							+activity(activity)
					
					if data.activities.totalPages > 1
						ul.pagination
							if data.activities.previous
								li: a(href='?page=' + data.activities.previous): span.glyphicon.glyphicon-chevron-left
							else
								li.disabled: a(href='?page=' + 1): span.glyphicon.glyphicon-chevron-left
							each p, i in data.activities.pages
								li(class=data.activities.currentPage == p ? 'active' : null)
									a(href='?page=' + (p == '...' ? (i ? data.activities.totalPages : 1) : p ))= p
							if data.activities.next
								li: a(href='?page=' + data.activities.next): span.glyphicon.glyphicon-chevron-right
							else
								li.disabled: a(href='?page=' + data.activities.totalPages): span.entypo.glyphicon.glyphicon-chevron-right
				else
					if data.category
						h3.text-muted There are no activities in the category #{data.category.name}.
					else
						h3.text-muted There are no activities yet.
		
		if data.categories.length
			.col-sm-4.col-md-3
				h2 Categories
				.list-group(style='margin-top: 70px;')
					a(href='/activities', class=!data.category ? 'active' : false).list-group-item All Categories
					each cat in data.categories
						a(href='/activities/' + cat.key, class=data.category && data.category.id == cat.id ? 'active' : false).list-group-item= cat.name
